{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@setlister/auth": ["libs/auth/src/index.ts"],
      "@setlister/auth/server": ["libs/auth/src/server.ts"],
      "@setlister/db": ["libs/db/src/index.ts"],
      "@setlister/env/*": ["libs/env/src/*.mts"],
      "@setlister/ui": ["libs/ui/src/index.ts"],
      "@setlister/ui/*": ["libs/ui/src/*"],
      "@setlister/utils": ["libs/utils/src/index.ts"],
      "@setlister/utils/*": ["libs/utils/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
